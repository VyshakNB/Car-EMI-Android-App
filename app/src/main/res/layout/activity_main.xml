<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFDFD"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="562dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="157dp"
        android:layout_marginBottom="12dp"
        android:background="#3F51B5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="25dp"
        android:text="CAR LOAN EMI CALCULATOR"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#1A2E9E"
        android:textSize="28sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/result"
        android:layout_width="337dp"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="36dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="36dp"
        android:background="#9CC3D5FF"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0C0C0C"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pa"
        android:layout_width="182dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="180dp"
        android:text="Principal Amount*"
        android:textColor="#FAF7F7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/pri"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="219dp"
        android:background="#FCFBFD"
        android:ems="10"
        android:hint="in rupees"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#090909"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/dp"
        android:layout_width="176dp"
        android:layout_height="37dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="284dp"
        android:text="Down Payment*"
        android:textColor="#FAF7F7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/dpt"
        android:layout_width="299dp"
        android:layout_height="38dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="323dp"
        android:background="#FCFBFD"
        android:ems="10"
        android:hint="in rupees"
        android:inputType="numberDecimal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#090909"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ir"
        android:layout_width="297dp"
        android:layout_height="39dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="381dp"
        android:text="Interest Rate* (max 50% per annum)"
        android:textColor="#FAF7F7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="150dp"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="421dp"
        android:backgroundTint="#FFFFFF"
        android:scrollbarStyle="outsideInset" />

    <TextView
        android:id="@+id/ltm"
        android:layout_width="301dp"
        android:layout_height="35dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="485dp"
        android:text="Loan Term*(max 50 months)"
        android:textColor="#FAF7F7"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="522dp"
        android:backgroundTint="#FFFFFF" />

    <Button
        android:id="@+id/clrbtn"
        android:layout_width="147dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="587dp"
        android:backgroundTint="#F6F2F2"
        android:text="RESET"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#213397"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />

    <Button
        android:id="@+id/emibtn"
        android:layout_width="138dp"
        android:layout_height="61dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="230dp"
        android:layout_marginTop="587dp"
        android:backgroundTint="#F6F2F2"
        android:text="CALCULATE"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#213397"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="30dp" />




</RelativeLayout>